# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_size = 2

[*.sh]
indent_style = tab
end_of_line = lf
insert_final_newline = true

[*.bicep]
indent_style = space
indent_size = 2
